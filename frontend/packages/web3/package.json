{
  "name": "@safeguard/web3",
  "version": "1.0.0",
  "description": "Web3 utilities for SafeGuard platform",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@polkadot/api": "^16.4.4",
    "@polkadot/extension-dapp": "^0.61.6",
    "@polkadot/keyring": "^13.5.5",
    "@polkadot/util": "^13.5.5",
    "@polkadot/util-crypto": "^13.5.5",
    "@safeguard/types": "^1.0.0",
    "@tanstack/react-query": "^5.85.3",
    "@wagmi/connectors": "^5.4.3",
    "@wagmi/core": "^2.16.3",
    "ethers": "^6.13.4",
    "viem": "^2.33.3",
    "wagmi": "^2.16.3",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@safeguard/tsconfig": "^1.0.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.53.0",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
