{
  "name": "@safeguard/shared-ui",
  "version": "1.0.0",
  "description": "Shared UI components for SafeGuard platform",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:css && tsup",
    "build:css": "postcss src/index.css -o dist/index.css",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@safeguard/web3": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.468.0",
    "object-hash": "^3.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@safeguard/types": "^1.0.0",
    "@safeguard/utils": "^1.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.21",
    "esbuild-postcss": "^0.0.4",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "safeguard",
    "lunes",
    "web3"
  ],
  "author": "SafeGuard Team",
  "license": "MIT"
}
